<Window x:Class="AccountManager.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:entities="clr-namespace:AccountManager.Entities"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AccountManager.ViewModels"
        xmlns:views="clr-namespace:AccountManager.Views"
        Title="AccountManager"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance viewModels:ShellViewModel}"
        mc:Ignorable="d">
    <DockPanel>
        <ComboBox Name="AccountBox"
                  DockPanel.Dock="Top"
                  ItemsSource="{Binding Accounts}">
            <ComboBox.ItemTemplate>
                <DataTemplate DataType="{x:Type entities:Account}">
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <views:AccountView DataContext="{Binding AccountViewModel}" />
    </DockPanel>
</Window>
