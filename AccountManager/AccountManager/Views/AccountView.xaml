<UserControl x:Class="AccountManager.Views.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AccountManager.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AccountManager.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:AccountViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <TextBlock DockPanel.Dock="Top" Text="{Binding SelectedAccount.Name, StringFormat=Besitzer : {0}}" />
        <DataGrid DockPanel.Dock="Top" ItemsSource="{Binding SelectedAccount.Earnings}" />
        <DataGrid DockPanel.Dock="Top" ItemsSource="{Binding SelectedAccount.Spendings}" />
    </Grid>
</UserControl>
